<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/CustomAlertDialog</item>
    </style>
    
    <style name="CustomAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="backgroundTint">#fafafa</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/white</item>
        <item name="behavior_peekHeight">800dp</item>
        <item name="behavior_halfExpandedRatio">0.9</item>
        <item name="behavior_draggable">false</item>
    </style>
    
    <style name="TextAppearance.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/bold_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Bold.Medium" parent="TextAppearance.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Bold.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/bold_700</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextAppearance.Bold.Small" parent="TextAppearance.Bold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/medium_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/medium_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearance_bottom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="android:background">@color/light_blue</item>
    </style>
    
    <style name="CustomChip" parent="Widget.Material3.Chip.Suggestion.Elevated">
        <item name="chipCornerRadius">4dp</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">@drawable/chip_textcolor_state</item>
        <item name="chipBackgroundColor">@drawable/chip_background_state</item>
    </style>

    <style name="CustomChip.Checked" parent="CustomChip">
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="CustomChip.Static" parent="CustomChip">
        <item name="android:checkable">false</item>
    </style>
    
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:drawableTint">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">6dp</item>
    </style>
    
    <style name="SmallButton" parent="CustomButton">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LogoutButton" parent="SmallButton">
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/black_10_alpha</item>
        <item name="android:drawableEnd">@drawable/ic_logout_small</item>
    </style>

 
</resources>